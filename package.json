    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.1.2",
    "cloudinary": "^2.8.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.1.0",
    "express-rate-limit": "^6.0.4",
    "helmet": "^5.0.1",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.11.0",
