    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^3.0.1",
    "node-fetch": "^3.3.2",
    "openai": "^6.9.1",
    "pdf-parse": "^2.4.5",
    "validator": "^13.7.0",
    "xss-clean": "^0.1.1"
  }
